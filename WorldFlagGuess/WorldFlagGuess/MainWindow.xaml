<Window x:Class="WorldFlagGuess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldFlagGuess"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Tieu de-->
        <TextBlock Grid.Row="0" Text="Nation Over The World" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!--Chon quoc gia-->
        <ListBox x:Name="CountryListBox" Grid.Row="1"
                 SelectionChanged="CountryListBox_SelectionChanged"
                 DisplayMemberPath="Name"
                 Margin="0,0,0,10"/>
        
        <!--Thong tin chi tiet-->
        <Border Grid.Row="2" Background="#9C8D8D" Padding="10" CornerRadius="5">
            <StackPanel x:Name="DetailPanel" Visibility="Collapsed">
                <TextBlock x:Name="TxtName" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="TxtCapital"/>
                <TextBlock x:Name="TxtPopulation"/>
                <TextBlock x:Name="TxtArea"/>
                <TextBlock x:Name="TxtContinent"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
